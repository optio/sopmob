
{
    "$jason": {
      "head": {
        "title": "login"
      },
      "body": {
        "style": {
          "border": "none",
          "background": "#646464"
        },
        "header": {
          "title": "Sign in 2",
          "style": {
            "background": "#646464",
            "color": "#ffffff"
          }
        },
        "sections": [{
          "items": [{
            "type": "space",
            "height": "10"
          }, {
            "type": "textfield",
            "name": "email",
            "style": {
              "size": "20",
              "color": "#8bb92d",
              "font": "HelveticaNeue-Bold",
              "background": "#575757",
              "padding": "20"
            },
            "placeholder": "enter user"
          }, {
            "type": "space",
            "height": "5"
          }, {
            "type": "textfield",
            "name": "password",
            "placeholder": "enter password",
            "style": {
              "size": "20",
              "color": "#8bb92d",
              "font": "HelveticaNeue-Bold",
              "background": "#575757",
              "padding": "20",
              "secure": "true"
            }
          }, {
            "type": "space",
            "height": "5"
          }, {
            "type": "label",
            "style": {
              "width": "100%",
              "align": "right",
              "font": "HelveticaNeue-Bold",
              "size": "20",
              "padding": "10",
              "background": "#8bb92d",
              "color": "#ffffff"
            },
            "text": "Sign in >",
            "action": {
              "type": "$network.request",
              "options": {
                "url": "https://postman-echo.com/basic-auth",
                "method": "get",
                "header": {
                    "Authorization": "Basic cG9zdG1hbjpwYXNzd29yZA=="
                }
              },
              "success": {
                "type": "$session.set",
                "options": {
                  "domain": "https://postman-echo.com/",
                  "header": {
                    "X-User-Email": "{{$jason.email}}",
                    "X-User-Token": "{{$jason.authentication_token}}"
                  }
                },
                "success": {
                  "type": "$href",
                  "options": {
                    "url": "https://docs.postman-echo.com/",
                    "transition": "replace"
                  }
                },
                "error": {
                  "type": "$util.banner",
                  "options": {
                    "title": "Error",
                    "description": "Something went wrong. Please check if you entered your email and password correctly"
                  }
                }
              },
              "error": {
                "type": "$util.banner",
                "options": {
                  "title": "Error",
                  "description": "Something went wrong. Please check if you entered your email and password correctly"
                }
              }
            }
          }, {
            "type": "label",
            "style": {
              "size": "16",
              "font": "HelveticaNeue-Bold",
              "text": "or",
              "padding": "10",
              "align": "center"
            }
          }]
        }]
      }
    }
  }
  