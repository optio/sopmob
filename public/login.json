{
    "$jason": {
        "head": {
            "title": "login",
            "actions": {
                "$pull": {
                    "type": "$flush",
                    "success": {
                        "type": "$href",
                        "options": {
                            "url": "https://s3-eu-west-1.amazonaws.com/sopmob.mijnesite.be/login.json"
                        }
                    }
                }
            }
        },
        "templates": {
            "body": {
                "sections": [
                    {
                        "items": {
                            "type": "vertical",
                            "style": {
                                "padding": 30,
                                "spacing": 20,
                                "align": "center"
                            },
                            "components": [
                                {
                                    "type": "label",
                                    "text": "Sign in >",
                                    "action": {
                                        "type": "$network.request",
                                        "options": {
                                            "url": "https://postman-echo.com/basic-auth",
                                            "method": "get",
                                            "header": {
                                                "Authorization": "Basic cG9zdG1hbjpwYXNzd29yZA=="
                                            }
                                        },
                                        "success": {
                                            "type": "$session.set",
                                            "options": {
                                                "domain": "https://postman-echo.com/",
                                                "header": {
                                                    "X-User-Email": "{{$jason.email}}",
                                                    "X-User-Token": "{{$jason.authentication_token}}"
                                                }
                                            },
                                            "success": {
                                                "type": "$href",
                                                "options": {
                                                    "url": "https://docs.postman-echo.com/",
                                                    "transition": "replace"
                                                }
                                            },
                                            "error": {
                                                "type": "$util.banner",
                                                "options": {
                                                    "title": "Error",
                                                    "description": "Something went wrong. Please check if you entered your email and password correctly"
                                                }
                                            }
                                        },
                                        "error": {
                                            "type": "$util.banner",
                                            "options": {
                                                "title": "Error",
                                                "description": "Something went wrong. Please check if you entered your email and password correctly"
                                            }
                                        }
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        }
    }
}