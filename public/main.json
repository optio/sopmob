
{
    "$jason": {
      "head": {
        "title": "SOP Mob",
        "actions": {
          "$pull": {
            "trigger": "reload"
          },
          "$foreground": {
            "trigger": "load"
          },
          "$show": {
            "trigger": "load"
          },
          "reload": {
            "type": "$flush",
            "success": {
                "type": "$href",
                "options": {
                    "url": "https://raw.githubusercontent.com/optio/sopmob/master/public/main.json"
                }
            }
          },
          "load": {
            "type": "$network.request",
            "options": {
              "url": "https://api.github.com/repos/optio/sopmob/commits"
            },
            "success": {
              "type": "$render",
              "success": {
                "type": "$util.toast",
                "options": {
                  "text": "Refreshed"
                }
              }
            }
          }
        },
        "templates": {
          "body": {
            "sections": [
              {
                "items": {
                    "{{#each $jason}}": {

                        "type": "vertical",
                        "style": {
                            "spacing": "5"
                        },
                        "components": [
                            {
                            "type": "label",
                            "text": "{{sha}}",
                            "style": {
                                "font": "HelveticaNeue-Bold",
                                "color": "#ff6600",
                                "size": "16"
                            }
                            },
                            {
                            "type": "label",
                            "style": {
                                "color": "#aaaaaa",
                                "font": "HelveticaNeue",
                                "size": "13"
                            },
                            "text": "{{commit.author.date}}"
                            }
                        ]
                    }
                }
              }
            ]
          }
        }
      }
    }
  }
  