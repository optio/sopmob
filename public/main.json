
{
    "$jason": {
      "head": {
        "title": "SOP Mob",
        "actions": {
          "$pull": {
            "trigger": "reload"
          },
          "$show": {
            "trigger": "reload"
          },
          "reload": {
            "type": "$network.request",
            "options": {
              "url": "https://api.github.com/repos/optio/sopmob/commits"
            },
            "success": {
              "type": "$render",
              "success": {
                "type": "$util.toast",
                "options": {
                  "text": "Refreshed"
                }
              }
            }
          }
        },
        "templates": {
          "body": {
            "sections": [
              {
                "header": {
                  "type": "horizontal",
                  "style": {
                    "background": "rgba(14,122,254,0.1)",
                    "padding": "20"
                  },
                  "components": [
                    {
                      "style": {
                        "size": "12"
                      },
                      "type": "label",
                      "text": "This demo parses an HTML content loaded from Hacker News (https://news.ycombinator.com) and renders it into native view"
                    }
                  ]
                },
                "items": {
                    "{{#each $jason}}": {

                        "type": "vertical",
                        "style": {
                            "spacing": "5"
                        },
                        "components": [
                            {
                            "type": "label",
                            "text": "{{$(this).sha.text()}}",
                            "style": {
                                "font": "HelveticaNeue-Bold",
                                "color": "#ff6600",
                                "size": "16"
                            }
                            },
                            {
                            "type": "label",
                            "style": {
                                "color": "#aaaaaa",
                                "font": "HelveticaNeue",
                                "size": "13"
                            },
                            "text": "{{$(this).sha}}"
                            }
                        ]
                    }
                }
              }
            ]
          }
        }
      }
    }
  }
  